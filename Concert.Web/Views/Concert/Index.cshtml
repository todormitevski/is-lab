@model List<Concert.Web.Models.ConcertModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="display: flex; justify-content: space-between;">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
    <a class="btn btn-primary" asp-controller="Tickets" asp-action="Create">Buy A Ticket</a>
</p>

<div>
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem; display: flex;">
        <img class="card-img-top" src="@item.ConcertUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.ConcertName</h5>
                <p class="card-date">@item.ConcertDate</p>
                <p class="card-place">@item.ConcertPlace</p>
                <p class="card-price">@item.ConcertPrice</p>
                <span style="display: flex;">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </span>
            </div>
        </div>
    }
</div>
